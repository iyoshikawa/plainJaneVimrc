set number
syntax enable
set tabstop=4
set expandtab
set backspace=indent,eol,start
set ttyfast
set statusline
set hlsearch
set incsearch
set smartcase

"setting up the no swap file issue
set nobackup
set noswapfile

set showmatch

colorscheme slate

set splitright

" remapping the esc key
imap jk <Esc>


nnoremap ; :

 nnoremap <C-J> <C-W>j
 nnoremap <C-H> <C-W>h
 nnoremap <C-K> <C-W>k
 nnoremap <C-L> <C-W>l
